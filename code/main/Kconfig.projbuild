menu "LED Config"
    config LED_IO
        int "LED IO"
        range 0 34
        default 18
        help
            GPIO number to control LED array.

    config EXIT_TIME
        int "Delay time(s) to activate motion"
        range 0 60000
        default 25
        help
            Debounces motion allowing you to exit the area.

    config LED_OFF_TIME
        int "Delay time(m) turn off LED"
        range 0 60000
        default 3600
        help
            If no activity detected, turn off LED array after this amount of minutes.

    config DEFAULT_PIXEL_COUNT
        int "Pixel Count"
        range 0 1500
        default 1000
        help
            Set number of pixels on strip or panel.
endmenu

menu "Keypad IO"
    config KEYPAD_R1_IO
        int "Keypad - Row 1"
        range 0 34
        default 5
        help
            GPIO number for row or column.

    config KEYPAD_R2_IO
        int "Keypad - Row 2"
        range 0 34
        default 5
        help
            GPIO number for row or column.
endmenu

menu "Motion"
    config PIR_IO
        int "PIR IO Number"
        range 0 34
        default 27
        help
            GPIO number for row or column.
endmenu

choice UID_PROGRAM_MODE
    bool "Set UID Program Mode"
    default CHECK_UID
    help
        Specify how much output to see in bootloader logs.

    config CHECK_UID
        bool "Authenticate UID"
    config ADD_UID
        bool "Add UID"
    config REMOVE_UID
        bool "Remove UID"
endchoice
